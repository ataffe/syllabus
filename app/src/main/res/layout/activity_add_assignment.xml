<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_assignment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alex.homeworkplanner.AddAssignment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:weightSum="1"
        android:id="@+id/toolbar">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addToHomeButton"
            android:background="@mipmap/launcher_icon3"
            android:onClick="addToHome"
            android:layout_marginLeft="5dp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Assignments"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:id="@+id/appCompatTextView"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp">

    </android.support.v7.widget.AppCompatTextView>


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/textInputLayout">

        <android.support.design.widget.TextInputEditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:hint="Assignment Name"
            android:inputType="text"
            android:id="@+id/editText"/>


    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/textInputLayout2"
        android:weightSum="1">

        <android.support.design.widget.TextInputEditText
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:hint="Due Date"
            android:onClick="showDatePickerDialog"
            android:inputType="date"
            android:id="@+id/editText2"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/textInputLayout3">

        <android.support.design.widget.TextInputEditText
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:hint="Pts"
            android:inputType="date"
            android:id="@+id/editText3"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_marginTop="47dp"
        android:id="@+id/floatingActionButton"
        android:layout_below="@+id/textInputLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />


</RelativeLayout>
